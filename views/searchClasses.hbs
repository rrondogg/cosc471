<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<body>
    <nav>
        <h4>GrupoQuatro Registration System</h4>
        <ul>
            <li><a href="/startPage">Home</a></li>
            <li>
                <a href="/mainMenu" id="linkForMainMenu">My Classes</a>
                <form action="/auth/displayCurrentSchedule" method="POST" id="scheduleForm">
                    <input type="hidden" name="displaySchedule" value="true">
                </form>
            </li>
            <li><a href="/">Logout</a></li>
        </ul>
    </nav>
    <div>
        {{#if message}}
            <h2 class="text-success bg-light p-2 border rounded">{{message}}</h2>
        {{else}}
            {{#if messageFail}}
                <h2 class="text-success bg-light p-2 border rounded">{{messageFail}}</h2>
            {{/if}}
        {{/if}}
    </div>
    <div class="container mt-5">
        <h2>Search for Classes</h2>
        <form action="/auth/searchClasses" method="POST">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search for a class..." id = "searchClass" name = "searchClass">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Search All</button>
                </div>
            </div>
        </form>
  </div>

    <div class="container mt-4">
        <table class = "table">
            <thead>
                <tr>
                    <th>CRN</th>
                    <th>Capacity</th>
                    <th>Students Enrolled</th>
                    <th>Meeting Times</th>
                    <th>Course Number</th>
                    <th>Class Name</th>
                    <th>Building and Room No</th>
                    <th></th>
                    <!-- Add more table headers based on your columns -->
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                    <tr>
                    <td>{{this.CRN}}</td>
                    <td>{{this.Capacity}}</td>
                    <td>{{this.StudentsEnrolled}}</td>
                    <td>{{this.MeetingTimes}}</td>
                    <td>{{this.CourseNumber}}</td>
                    <td>{{this.ClassName}}</td>
                    <td>{{this.BuildingAndRoomNo}}</td>
                    <td>
                        <form action="/auth/addClass" method="POST">
                            <input type="hidden" name="CRN" value="{{this.CRN}}">
                            <button class = "btn btn-primary">Add</button>
                        </form>
                    </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        document.getElementById('linkForMainMenu').addEventListener('click', function(event) {
        event.preventDefault(); // Prevent the default behavior of the link

        // Simulate form submission
        document.getElementById('scheduleForm').submit();
        });

    </script>
</body>
</html>